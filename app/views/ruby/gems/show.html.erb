<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h1><%= @name %></h1>

    <table class="table">
      <thead>
      <tr>
        <th>repository</th>
        <th>version</th>
      </tr>
      </thead>

      <tbody>
      <% @repository_gems.each do |repo, spec| %>
        <tr>
          <td>
            <%= link_to repo.github_path, github_user_repository_path(user_id: repo.github_user.name, id: repo.repository) %>
          </td>
          <td>
            <%= spec.version %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-2"></div>
</div>
