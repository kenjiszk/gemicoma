<header>
  <div class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Gemicoma', '/', class: 'navbar-brand' %>
      </div>
      <div class="nav navbar-form navbar-right">
        <% if current_user&.admin %>
          <%= link_to 'New Repository', new_admin_github_repository_path %>
          /
        <% end  %>
