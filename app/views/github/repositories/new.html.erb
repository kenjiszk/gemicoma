<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= form_with url: github_repositories_path do |form| %>
      <div class="row">
        <%= form.label :user, class: "col-sm-2" %>
        <%= form.text_field :user, class: "col-sm-2" %>
      </div>
      <div class="row">
        <%= form.text_field :repository %>
        <%= form.text_field :commit_hash %>
      </div>
      <div class="row">
        <%= form.fields(:bundle_files) do |fields| %>
          <%= fields.fields(:rubygem) do |rubygem| %>
            <%= rubygem.label :gemfile_path, class: "col-sm-2"%>
            <%= rubygem.text_field :gemfile_path, class: "col-sm-2" %>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>

